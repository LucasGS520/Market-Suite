{
  "uid": "marketalert_redis",
  "title": "Métricas Redis - MarketAlert",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "timezone": "",
  "panels": [
    {
      "id": 1,
      "title": "Uso de Memória (MB)",
      "type": "gauge",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "redis_memory_usage_bytes / 1024 / 1024",
          "legendFormat": "Memória",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "megabytes",
          "min": 0
        }
      }
    },
    {
      "id": 2,
      "title": "Mensagens Pendentes Totais",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "x": 6, "y": 0, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "sum(redis_queue_messages)",
          "legendFormat": "Mensagens",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "textMode": "value_and_name",
        "colorMode": "value"
      }
    },
    {
      "id": 3,
      "title": "Mensagens por Fila",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "redis_queue_messages",
          "legendFormat": "{{queue}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "nullValueMode": "connected"
        }
      },
      "options": {
        "legend": { "showLegend": true, "displayMode": "list", "placement": "bottom" }
      }
    }
  ],
  "time": { "from": "now-1h", "to": "now" },
  "annotations": { "list": [] },
  "tags": ["redis", "marketalert"],
  "templating": { "list": [] },
  "links": []
}
