{
  "uid": "marketalert_api_errors",
  "title": "Métricas de Erros API - MarketAlert",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "timezone": "",
  "panels": [
    {
      "id": 1,
      "title": "Erros Totais da API",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
      "targets": [
        {
          "expr": "sum(api_errors_total)",
          "legendFormat": "Total Erros",
          "refId": "A"
        }
      ],
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] },
        "textMode": "value_and_name",
        "colorMode": "value"
      }
    },
    {
      "id": 2,
      "title": "Erros por Endpoint (min)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "x": 6, "y": 0, "w": 12, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(api_errors_total[1m])) by (endpoint)",
          "legendFormat": "{{endpoint}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "nullValueMode": "connected"
        }
      },
      "options": {
        "legend": { "showLegend":  true, "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 3,
      "title": "Erros por Código (min)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "x": 18, "y": 0, "w": 6, "h": 6 },
      "targets": [
        {
          "expr": "sum(rate(api_errors_total[1m])) by (status_code)",
          "legendFormat": "{{status_code}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "nullValueMode": "connected"
        }
      },
      "options": {
        "legend": { "showLegend": true, "displayMode": "list", "placement": "bottom" }
      }
    }
  ],
  "time": { "from": "now-1h", "to": "now" },
  "annotations": { "list": [] },
  "tags": ["api", "marketalert"],
  "templating": { "list": [] },
  "links": []
}
