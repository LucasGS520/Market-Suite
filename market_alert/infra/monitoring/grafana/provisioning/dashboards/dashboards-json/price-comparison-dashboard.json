{
  "uid": "marketalert_price_comparison",
  "title": "Métricas de Comparação de Preços - MarketAlert",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "timezone": "",
  "panels": [
    {
      "id": 1,
      "title": "Taxa de Comparações por Status (min)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 7 },
      "targets": [
        {
          "expr": "sum(rate(price_comparisons_total[1m])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "nullValueMode": "connected" }
      },
      "options": {
        "legend": { "showLegend": true, "displayMode": "list", "placement": "bottom" }
      }
    },
    {
      "id": 2,
      "title": "Duração Média das Comparações (s)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 7 },
      "targets": [
        {
          "expr": "avg(rate(price_comparison_duration_seconds_sum[1m]) / rate(price_comparison_duration_seconds_count[1m]))",
          "legendFormat": "Duração média",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "unit": "s", "nullValueMode": "connected" }
      },
      "options": {
        "legend": { "showLegend": false }
      }
    },
    {
      "id": 3,
      "title": "Alertas Gerados por Minuto",
      "type": "stat",
      "datasource": "Prometheus",
      "gridPos": { "x": 0, "y": 7, "w": 6, "h": 5 },
      "targets": [
        {
          "expr": "sum(rate(price_alerts_total[1m]))",
          "legendFormat": "Alertas",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": { "nullValueMode": "connected" }
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"] }
      }
    }
  ],
  "time": { "from": "now-1h", "to": "now" },
  "annotations": { "list": [] },
  "tags": ["comparison", "marketalert"],
  "templating": { "list": [] },
  "links": []
}
